@keyframes scroll-icon {
    0% {
        opacity: 0;
        transform: translateY(-12px);
    }

    30%, 70% {
        opacity: 1;
    }

    100% {
        opacity: 0;
        transform: translateY(12px);
    }
}

@keyframes fadeIt {
    0% {
        opacity: 0;
    }

    30%, 70% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}

@keyframes rotating {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

@keyframes scaling {
    from {
        transform: scale(0);
    }

    to {
        transform: scale(1);
    }
}