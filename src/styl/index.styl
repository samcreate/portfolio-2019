@import 'fonts';
@import 'breakpoints';
@import 'globals';
@import 'animations';

#app {
  align-items: center;
  display: grid;
  height: 100vh;
  justify-items: center;
  perspective: 801px;
  perspective-origin: center center;
  pointer-events: none;
  transform-style: preserve-3d;
  width: 100vw;

  +for_breakpoint(mobile) {
    height: auto;
    perspective: none;
    transform-style: flat;
  }

  .loader {
    align-items: center;
    display: grid;
    justify-items: center;
    perspective: 50px;
    pointer-events: all;
    position: fixed;
    transform-style: preserve-3d;

    +for_breakpoint(mobile) {
      position: relative;
    }

    .percent {
      p {
        color: white;
        font-family: 'montserrat_blackregular';
        font-size: 5em;
        opacity: 0.09;

        +for_breakpoint(mobile) {
          position: relative;
          top: 40%;
          transform: translateY(-50%);
        }
      }
    }

    .tp-ldr, .bt-ldr {
      position: fixed;
      transform-origin: center;
      width: 10vw;

      +for_breakpoint(mobile) {
        height: 30vw;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        transform: none;
        width: 50vw;
      }

      & path {
        stroke-width: 3;
      }
    }

    .tp-ldr {
      clip-path: inset(0 0 0 var(--loaded, 100%));
      transition: clip-path 0.75s;

      & path {
        stroke: rgb(141, 236, 193);
      }
    }
  }

  &.loading .about, &.loading .about, &.loading .sections, &.loading .bg {
    opacity: 0;
  }

  nav {
    color: white;
    height: 70px;
    margin: 0;
    opacity: 0;
    overflow: hidden;
    padding: 0;
    pointer-events: all;
    position: fixed;
    right: 1vw;
    top: 1vw;
    width: 180px;
    z-index: 99;
    --transition-time: 0.18s;

    +for_breakpoint(mobile) {
      display: none;
    }

    ol {
      align-items: center;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      grid-template-rows: auto;
      justify-items: center;
      margin: 0;
      padding: 0;
      width: 100%;
    }

    ol > li {
      display: inline-block;
      height: 0.8vw;
      left: 0;
      list-style: none;
      margin: 0;
      padding: 0;
      position: relative;
      top: 0;
      width: 0.8vw;

      a {
        background: none;
        color: white;
        display: inline-block;
        display: block;
        height: 100%;
        left: 0;
        position: absolute;
        text-indent: -9999px;
        top: 0;
        width: 100%;
        z-index: 99;
      }

      &.dot {
        height: var(--dotsize);
        left: 0;
        position: relative;
        top: 0;
        transform-origin: center;
        width: var(--dotsize);
        --dotsize: 20px;

        a {
          background: none;
          border-radius: 100%;
        }

        border: 3px solid white;
        border-radius: 100%;
        transition: background var(--transition-time);

        ^[0].tinker nav .tinker, &.tinker.cycle, &.tinker:hover {
          background: rgb(241, 103, 100);
        }

        ^[0].explorer nav .explorer, &.explorer.cycle, &.explorer:hover {
          background: rgb(141, 236, 193);
        }

        ^[0].explorer nav .dot {
          border-color: rgb(141, 236, 193);
        }

        ^[0].developer nav .developer, &.developer.cycle, &.developer:hover {
          background: rgb(70, 114, 141);
        }

        ^[0].animator nav .animator, &.animator.cycle, &.animator:hover {
          background: #502455;
        }
      }

      &.home {
        cursor: pointer;
        transition: all var(--transition-time);

