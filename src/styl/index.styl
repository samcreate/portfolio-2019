#confetti-holder {
  background: none;
  height: 100vh;
  left: 0;
  pointer-events: none;
  position: absolute;
  top: 0;
  width: 100vw;
  z-index: 99999;
}

.click-confetti {
  height: var(--click-height, 200px) !important;
  left: calc(var(--click-x) - calc((var(--click-width) / 2)));
  position: absolute;
  top: calc(var(--click-y) + calc((var(--click-height) / 2)));
  transform: none !important;
  width: var(--click-width, 300px) !important;
  z-index: 999;

  svg {
    height: var(--click-height, 200px) !important;
    left: 0;
    position: absolute;
    top: 0;
    transform: none !important;
    width: var(--click-width, 300px) !important;
    z-index: 999;
  }
}

#app.tinker #confetti-holder .click-confetti {
  path {
    stroke: rgb(241, 103, 100) !important;
  }
}

#app.explorer #confetti-holder .click-confetti {
  path {
    stroke: rgb(255, 152, 0) !important;
  }
}

#app.developer #confetti-holder .click-confetti {
  path {
    stroke: #46738D !important;
  }
}

#app.animator #confetti-holder .click-confetti {
  path {
    stroke: #502455 !important;
  }
}

#app.is-mobile #projection2, #app.is-mobile #webpage, #app.is-mobile #road, #app.is-mobile #headlights, #app.is-mobile #anim-factory, #app.is-mobile #anim-floor {
  filter: none !important;
}

.plankton {
  border: 1px solid red;
  left: -25%;
  pointer-events: none;
  position: absolute;
  top: -55%;
  transform: translateZ(149px);
  transition: opacity 1s;
  z-index: -1 !important;

  .life {
    will-change: transform;

    +for_breakpoint(mobile) {
      display:none;
      z-index: -9999 !important;
    }
  }

  +for_breakpoint(mobile) {
    left: 0;
    position: fixed;
    top: 0;
    transform: none;
    z-index: -9225;
  }

  > div {
    opacity: 0;
    position: absolute;
    transform-style: preserve-3d;
    width: 220px;

    +for_breakpoint(mobile) {
      width: 160px;
    }

    svg {
      path {
        stroke: rgba(255, 255, 255, 1) !important;
      }
    }
  }
}

.scroll-icon-container {
  bottom: 1.5%;
  left: 50%;
  margin-left: -10px;
  opacity: 0;
  pointer-events: all;
  position: fixed;

  .scroll-icon {
    align-items: center;
    border: solid 2px;
    border-radius: 2em;
    color: rgba(#fff, 0.5);
    display: flex;
    font-size: 22px;
    height: 2em;
    justify-content: center;
    transition: 0.4s;
    width: 1.2em;
  }

  .scroll-icon:hover {
    background-color: rgba(#fff, 0.05);
    color: #fff;
  }

  .scroll-icon::after {
    animation: scroll-icon 2.2s infinite cubic-bezier(0.65, 0.05, 0.36, 1);
    background-color: #fff;
    border-radius: 50%;
    content: '';
    height: 5px;
    width: 5px;
  }

  p {
    animation: fadeIt 2.2s infinite cubic-bezier(0.65, 0.05, 0.36, 1);
    color: white;
    display: inline-flex;
    font-family: 'montserrat_blackregular', sans-serif;
    font-size: 0.45em;
    font-weight: 400;
    left: -16px;
    position: relative;
    text-align: center;
    width: 151%;
  }

  +for_breakpoint(mobile) {
    display: none !important;
  }
}
