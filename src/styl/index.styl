  .about {
    color: white;
    display: grid;
    grid-column-gap: 5vw;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    min-width: 320px;
    pointer-events: auto;
    position: absolute;
    scroll-behavior: smooth;
    transform: translateZ(-229px) scale(1.2);
    width: 76vw;
    z-index: -1;

    +for_breakpoint(tablet_xl) {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    +for_breakpoint(tablet_md) {
      grid-template-columns: repeat(auto-fit, minmax(190px, 1fr));
    }

    +for_breakpoint(tablet) {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }

    +for_breakpoint(mobile) {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      height: 138vh;
      min-height: 943px;
      overflow: hidden;
      padding: 12vw;
      position: absolute;
      top: 0;
      transform: none;
      width: 100vw;
      z-index: -1 !important;
    }

    .copy {
      grid-column-end: span 2;

      p {
        min-width: 300px;
        width: 26vw;

        +for_breakpoint(mobile) {
          min-width: 320px;
        }
      }

      ul {
        align-items: center;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(40px, 1fr));
        margin: 0;
        min-width: 320px;
        padding: 0;
        padding-top: 10px;
        width: 10vw;

        +for_breakpoint(mobile) {
          transform: translateY(-20px);
          width: 100%;
        }

        li {
          list-style: none;
          margin: 0;
          opacity: 1;
          padding: 0;
          text-indent: -9999px;
          width: 2em;

          +for_breakpoint(mobile) {
            width: 9vw;
          }

          &::after {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg id='squiggle-link' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' xmlns:ev='http://www.w3.org/2001/xml-events' viewBox='0 0 20 4'%3E%3Cstyle type='text/css'%3E.squiggle{animation:shift .6s linear infinite;}@keyframes shift {from {transform:translateX(0);}to {transform:translateX(-20px);}}%3C/style%3E%3Cpath fill='none' stroke='%23ff9800' stroke-width='2' class='squiggle' d='M0,3.5 c 5,0,5,-3,10,-3 s 5,3,10,3 c 5,0,5,-3,10,-3 s 5,3,10,3'/%3E%3C/svg%3E");
            background-position: 0 100%;
            background-repeat: repeat-x;
            background-size: auto 3px;
            content: '';
            display: block;
            height: 10px;
            opacity: 0;
            transition: opacity 0.3s;
            width: 90%;
          }

          &:hover::after, &:focus::after {
            opacity: 1;
          }

          a {
            background-repeat: no-repeat;
            background-size: contain;
            display: block;
            pointer-events: auto;
            transition: opacity 0.1s;
            width: inherit;
            z-index: 1;

            &:hover, &:focus::after {
              opacity: 0.8 !important;
            }
          }

